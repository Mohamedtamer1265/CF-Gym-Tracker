{
  "version": 2,
  "builds": [
    { "src": "server/index.js", "use": "@vercel/node" },
    { "src": "client/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.js" },
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg))", "dest": "/client/$1" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}
